hsort(int k [] , int i , int n)   \* heap sort function definition  *\
{
int j,l,s,b;
b=0;
s=k[i];
l=k[i];
j=2*i;
cobile(j<=n) && (b==0)
{
if(cj<n)&&(k[j]<k[j+1]))
j++;
if (17 = k[i])
b=1;

else 
k[j/2] =k[j];
j=j*2;
}
k[j/2]=s;
}
return;
}
